# ==============================================================================
# APEX Development Environment Configuration - TEMPLATE
# ==============================================================================
# SETUP INSTRUCTIONS:
#   1. Copy this file to apex.env.local
#   2. Replace all placeholder values with your actual credentials
#   3. apex.env.local is gitignored for security - NEVER commit credentials!
#
# For CI/CD pipelines, set these values via environment secrets.
# ==============================================================================

# Database Connection
# -------------------
# SQLcl saved connection name (shown by: sql /NOLOG then 'connmgr list')
# This uses the same connection mechanism as MCP SQLcl
export DB_CONNECTION_NAME="USCIS_APP"

# Legacy connection settings (for reference)
export DB_USER="uscis_app"
# export DB_PASSWORD=""  # Set in apex.env.local - NEVER commit passwords!
export DB_CONNECTION=""  # e.g., "uscis_tracker_high" or "//localhost:1521/FREEPDB1"

# For Autonomous Database wallet-based connections
# Point this to your wallet directory containing tnsnames.ora
# export TNS_ADMIN="/path/to/your/wallet"

# APEX Application Settings
# -------------------------
export APEX_WORKSPACE="USCISAPP"
export APEX_APP_ID="102"

# Export/Import Options
# ---------------------
# Split exports into individual component files (recommended for Git)
export APEX_EXPORT_SPLIT="Y"

# Include shared components in exports
export APEX_EXPORT_COMPONENTS="Y"

# Skip unchanged objects during import (faster imports)
export APEX_SKIP_UNCHANGED="Y"

# Development Settings
# --------------------
# Set to Y to enable verbose output
export APEX_VERBOSE=""

# Debounce time for file watcher (seconds)
export APEX_WATCH_DEBOUNCE="2"
