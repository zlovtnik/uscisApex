# =============================================================================
# Copy this file to .env and fill in your real values:
#   cp docker/.env.example docker/.env
# =============================================================================

# --- Nginx Reverse Proxy ---------------------------------------------------
NGINX_HTTP_PORT=80
# NGINX_HTTPS_PORT=443

# Public-facing domain name (used in server_name and rewrites)
PUBLIC_DOMAIN=localhost

# The URL path visitors see instead of /ords/r/uscis_app/uscis-case-tracker/
PUBLIC_PATH=/uscis

# --- ORDS Connection --------------------------------------------------------
# Hostname of the ORDS container (matches the service name in docker-compose)
ORDS_HOST=ords
ORDS_PORT=8080
# Use 'https' when proxying to Oracle Autonomous DB Cloud; 'http' for local ORDS
ORDS_SCHEME=http

# APEX workspace and application alias (must match your APEX config)
ORDS_WORKSPACE=uscis_app
APEX_APP_ALIAS=uscis

# --- Oracle Database --------------------------------------------------------
# If ORDS connects to an external database, set these:
ORACLE_HOST=host.docker.internal
ORACLE_PORT=1521
ORACLE_SERVICE=XEPDB1
ORACLE_PWD=changeme_use_a_real_password
